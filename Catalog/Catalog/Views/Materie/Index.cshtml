@model IEnumerable<Catalog.Model.MaterieModel>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Materii</h2>

<p>
    @Html.ActionLink("Adaugare Materie", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nume)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>

            <td>
                @Html.ActionLink("Editare", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Detalii", "Details", new { id = item.ID }) |
                @Html.ActionLink("Stergere", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>